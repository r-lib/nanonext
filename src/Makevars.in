PKG_CFLAGS = @cflags@ $(C_VISIBILITY)
PKG_LIBS = @libs@

SOURCES = aio.c comms.c core.c dispatcher.c init.c ncurl.c net.c proto.c sync.c thread.c tls.c utils.c
OBJECTS = $(SOURCES:.c=.o)

.PHONY: all clean-archives clean

all: clean-archives

clean-archives: $(SHLIB)
	@rm -f ../install/lib/*.a

$(SHLIB): $(OBJECTS)

clean:
	rm -f $(OBJECTS) $(SHLIB)
